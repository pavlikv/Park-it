<?xml version='1.0' encoding='utf-8'?>
<widget id="com.greenriverdev.pvashchuk.parkit" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Park-It</name>
    <description>
        A simple app to help you find your car.
    </description>
    <author email="pvashchuk@mail.greenriver.edu" href="pvashchuk.greenriverdev.com">
        Student, Green River College
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1" />
    <plugin name="cordova-plugin-dialogs" spec="^2.0.1" />
    <engine name="browser" spec="^5.0.3" />

    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="handset" />
    <preference name="deployment-target" value="7.0" />
    <preference name="SuppressLongPressGesture" value="true" />
    <preference name="Suppress3DTouchGesture" value="true" />
    <preference name="InAppBrowserStorageEnabled" value="true" />

</widget>
